<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical" android:layout_height="wrap_content" android:layout_width="fill_parent">
    <EditText android:text="" android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/searchText"  android:imeOptions="actionSearch"></EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <CheckBox
            android:id="@+id/checkCourse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/courses" />
        <CheckBox
            android:id="@+id/checkCollection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/collections" />


    </LinearLayout>

    <CheckBox android:id="@+id/checkPodcast" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/podcasts"></CheckBox>
    <Button android:text="@string/search" android:layout_height="fill_parent" android:layout_width="fill_parent" android:id="@+id/SearchButton"></Button>
</LinearLayout>
